<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

	<!-- CARGAMOS EL FICHERO DATOSEMPRESA.PROPIEDADES -->

	<context:property-placeholder
		location="classpath:datosEmpresa.propiedades" />



	<!-- CREACION DE LA DEPENDENCIA -->

	<bean id="miInforme" class="es.manu.propierty.Informe"></bean>


	<bean id="miEmpleado" class="es.manu.propierty.DirectorEmpleado">

		<constructor-arg ref="miInforme"></constructor-arg>

	</bean>


	<!-- INYECCION DEPENDENCIAS CON CONSTRUCTOR Y CAMPOS -->

	<bean id="miJefeEmpleado" class="es.manu.propierty.JefeEmpleado">

		<constructor-arg ref="miInforme"></constructor-arg>

		<property name="email" value="Jefes@gmail.com"></property>

		<property name="nombreEmpresa" value="ManuelSfot S.A"></property>

	</bean>

	<!-- INYECCION DEPENDENCIAS CON SETTERS Y CAMPOS -->

	<bean id="miSecretario"
		class="es.manu.propierty.SecretarioEmpleado">

		<property name="informeNuevo" ref="miInforme"></property>

		<property name="email" value="Secretariado@gmail.com"></property>

		<property name="nombreEmpresa" value="ManuelSfot S.A"></property>

	</bean>


	<!-- INTRODUCION VALOR A LOS CAMPOS CON UN FICHERO PROPERTY -->

	<bean id="midirector" class="es.manu.propierty.DirectorEmpleado">

		<constructor-arg ref="miInforme"></constructor-arg>
		
		<property name="email" value="email"></property>

		<property name="nombreEmpresa" value="nombreEmpresa"></property>

	</bean>


</beans>