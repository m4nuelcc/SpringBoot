<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">


	<!-- CREACION DE LA DEPENDENCIA -->

	<bean id="miInforme" class="es.manu.IoC.Informe"></bean>


	<!-- INYECCIONES DE DEPENDENCIAS -->

	<!-- INYECCION DEPENDENCIAS CONSTRUCTOR -->

	<bean id="miEmpleado" class="es.manu.IoC.DirectorEmpleado">

		<constructor-arg ref="miInforme"></constructor-arg>

	</bean>
	
	<!-- INYECCION DEPENDENCIAS CON CONSTRUCTOR Y CAMPOS-->

	<bean id="miJefeEmpleado" class="es.manu.IoC.JefeEmpleado">

		<constructor-arg ref="miInforme"></constructor-arg>
		
			<property name="email" value="Jefes@gmail.com"></property>
		
		    <property name="nombreEmpresa" value="ManuelSfot S.A"></property>

	</bean>

	<!-- INYECCION DEPENDENCIAS CON SETTERS Y CAMPOS-->

	<bean id="miSecretario" class="es.manu.IoC.SecretarioEmpleado">

		<property name="informeNuevo" ref="miInforme"></property>
		
		<property name="email" value="Secretariado@gmail.com"></property>
		
		<property name="nombreEmpresa" value="ManuelSfot S.A"></property>

	</bean>


</beans>