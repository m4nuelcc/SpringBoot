<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">



	<!-- CREACION DE LA DEPENDENCIA -->

	<bean id="miInforme" class="es.manu.SingletonPrototype.Informe"></bean>


	<!-- INYECCIONES DE DEPENDENCIAS -->


	<bean id="miSecretario" class="es.manu.SingletonPrototype.SecretarioEmpleado" scope="prototype">

		<property name="informeNuevo" ref="miInforme"></property>
		
		<property name="email" value="Secretariado@gmail.com"></property>
		
		<property name="nombreEmpresa" value="ManuelSfot S.A"></property>

	</bean>

</beans>